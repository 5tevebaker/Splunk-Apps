<form>
  <label>File Activity</label>
  <description></description>
  <search id="basesearch">
    <query>| tstats summariesonly=t latest(_time) AS _time, values(log.log_subtype) AS log.log_subtype, values(log.severity) AS log.severity, values(log.app) AS log.app, values(log.user) AS log.user, values(log.threat_name) AS log.threat_name, values(log.file_name) AS log.file_name values(log.bytes_in) AS log.bytes_in, values(log.bytes_out) AS log.bytes_out, values(log.direction) AS log.direction, values(log.src_zone) AS log.src_zone, values(log.dest_zone) AS log.dest_zone, values(log.action) AS log.action, count FROM datamodel="pan_firewall" WHERE nodename="log.traffic" OR nodename="log.file" GROUPBY sourcetype log.serial_number log.session_id log.client_ip log.server_ip | rename log.* AS *</query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <fieldset autorun="true" submitbutton="true">
    <input type="time" searchwhenchanged="true" token="time">
      <label></label>
      <default>
        <earliest>-60m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="multiselect" token="serial_number">
      <label>serial number</label>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <fieldforlabel>serial_host</fieldforlabel>
      <fieldforvalue>serial_number</fieldforvalue>
      <search>
        <query>| inputlookup pan_devices_lookup 
| eval serial_host=if(!isnull(dvc_host),serial_number." : ".dvc_host,serial_number) 
| stats count by serial_number serial_host</query>
      </search>
      <choice value="*">all</choice>
      <valueprefix>log.serial_number="</valueprefix>
      <valuesuffix>"</valuesuffix>
      <delimiter> or </delimiter>
      <default>*</default>
    </input>
    <input type="multiselect" token="virtual_system">
      <label>vsys</label>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <fieldforlabel>vsys</fieldforlabel>
      <fieldforvalue>vsys</fieldforvalue>
      <search>
        <query>| inputlookup pan_devices_lookup
| stats count by vsys</query>
      </search>
      <choice value="*">all</choice>
      <valueprefix>log.virtual_system="</valueprefix>
      <valuesuffix>"</valuesuffix>
      <delimiter> or </delimiter>
      <default>*</default>
    </input>
    <input type="text" token="src_ip">
      <label>source ip</label>
      <default></default>
      <prefix>log.src_ip="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="dest_ip">
      <label>destination ip</label>
      <default></default>
      <prefix>log.dest_ip="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="file_name">
      <label>filename</label>
      <default></default>
      <prefix>log.file_name="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="user">
      <label>user</label>
      <default></default>
      <prefix>log.user=</prefix>
    </input>
    <input type="multiselect" token="app">
      <label>application</label>
      <default>*</default>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <choice value="*">all</choice>
      <valueprefix>log.app="</valueprefix>
      <valuesuffix>"</valuesuffix>
      <delimiter> or </delimiter>
      <fieldforlabel>app</fieldforlabel>
      <fieldforvalue>app</fieldforvalue>
      <search>
        <query>| inputlookup app_list.csv
| fields app</query>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <search base="basesearch">
          <query>| search action="blocked" AND log_subtype="file" | stats sum(count) as count</query>
        </search>
        <option name="drilldown">none</option>
        <option name="underLabel">Blocked</option>
      </single>
    </panel>
    <panel>
      <single>
        <search base="basesearch">
          <query>| search action="allowed" AND log_subtype="file" | stats sum(count) as count</query>
        </search>
        <option name="drilldown">none</option>
        <option name="underLabel">Allowed</option>
      </single>
    </panel>
    <panel>
      <single>
        <search base="basesearch">
          <query>| search log_subtype="file" | stats sum(count)</query>
        </search>
        <option name="drilldown">none</option>
        <option name="underLabel">Total</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>File Actions Over Time</title>
      <chart>
        <search base="basesearch">
          <query>| search log_subtype="file" | timechart count by action</query>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
    <panel>
      <title>Bytes Transfered Over Time</title>
      <chart>
        <search base="basesearch">
          <query>| search bytes_out&gt;0 OR bytes_in&gt;0 | table _time bytes_in bytes_out</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>File Direction</title>
      <chart>
        <search base="basesearch">
          <query>| search log_subtype="file" | stats count by direction</query>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Zone File Activity</title>
        <search base="basesearch">
          <query>| search log_subtype="file" | eval src_dest_zones = toString(src_zone) + " to " + toString(dest_zone) | stats count by src_dest_zones</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top Apps</title>
      <table>
        <search base="basesearch">
          <query>|  stats sum(bytes_in) AS total_bytes_in sum(bytes_out) AS total_bytes_out sum(count) AS count by app  | sort - count</query>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">preview</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>File Activity</title>
      <table>
        <search base="basesearch">
          <query>| eval time_in_seconds=_time | table _time threat_name severity action app client_ip server_ip user file_name session_id serial_number src_zone dest_zone victim_ip count | sort -_time</query>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <fields>["_time","threat_name","severity","action","app","client_ip","server_ip","user","file_name"]</fields>
        <drilldown>
          <link target="_blank">/app/SplunkforPaloAltoNetworks/incident_investigation?client_ip=$row.client_ip$&amp;server_ip=$row.server_ip$&amp;$row.drilldown_token$=t&amp;event_time=$row.time_in_seconds$&amp;session_id=$row.session_id$&amp;serial_number=$row.serial_number$&amp;victim_ip=$row.victim_ip$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>