<form>
  <label>All Incidents</label>
  <search id="basesearch">
    <query>| tstats summariesonly=t latest(_time) AS _time, values(log.log_subtype) AS log.log_subtype, values(log.severity) AS log.severity, values(log.app) AS log.app, values(log.user) AS log.user, values(log.threat_name) AS log.threat_name, values(log.file_name) AS log.file_name, values(log.file_hash) AS log.file_hash, values(log.url) AS log.url, values(log.dest_name) AS log.dest_name, count FROM datamodel="pan_firewall" WHERE (nodename="log.threat" OR nodename="log.wildfire.malicious") $log_subtype$ $severity$ GROUPBY sourcetype log.serial_number log.session_id log.client_ip log.server_ip log.direction log.action
| append
    [| tstats summariesonly=t count FROM datamodel="pan_firewall" WHERE nodename="log.correlation" $log_subtype$ $severity$ GROUPBY _time span=1s sourcetype log.log_subtype log.severity log.src_ip log.user log.object log.action
    | rename log.src_ip AS log.client_ip | rename log.object AS log.threat_name ]
| append 
    [| tstats summariesonly=t values(log.dest) as log.client_ip, values(log.file_name) AS log.file_name, values(log.file_hash) as log.file_hash, count FROM datamodel="pan_endpoint" WHERE nodename="log.attacks" $log_subtype$ $severity$ GROUPBY _time span=1s sourcetype log.log_subtype log.severity log.user log.action log.signature
    |rename log.signature AS log.threat_name]
| rename log.* AS *
| eval severity=case(severity=="critical","critical", severity=="high","high", severity=="medium","medium", severity=="low","low", severity=="informational","informational")
| eval victim_ip=if(isnull(direction) OR direction="client-to-server", server_ip, client_ip)
| lookup minemeldfeeds_lookup indicator AS client_ip OUTPUT value.autofocus_tags AS client_autofocus_tags
| lookup minemeldfeeds_lookup indicator AS server_ip OUTPUT value.autofocus_tags AS server_autofocus_tags
| lookup minemeldfeeds_lookup indicator AS file_hash OUTPUT value.autofocus_tags AS file_autofocus_tags
| lookup minemeldfeeds_lookup indicator AS url OUTPUT value.autofocus_tags AS url_autofocus_tags
| lookup minemeldfeeds_lookup indicator AS dest_name OUTPUT value.autofocus_tags AS domain_autofocus_tags
| eval autofocus_tags=mvappend(client_autofocus_tags,server_autofocus_tags,file_autofocus_tags,url_autofocus_tags,domain_autofocus_tags)</query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true" token="time">
      <label></label>
      <default>
        <earliest>-4h@m</earliest>
        <latest>now</latest>
      </default>
      <!--change>
        <eval token="latest_n">if('time.latest'=="now",now(),tonumber('time.latest'))</eval>
        <eval token="earliest_n">if('time.latest'=="now",relative_time(now(),'time.earliest'),tonumber('time.earliest'))</eval>
        <eval token="timediff">'latest_n'-'earliest_n'</eval>
        <eval token="span">case(relative_time('timediff',"-4h")&lt;=0, "30mins",  relative_time('timediff',"-3d")&lt;=0, "1hour",  relative_time('timediff',"-2mon")&lt;=0, "1day",  relative_time('timediff',"-2mon")&gt;0, "1month")</eval>
        <eval token="spantext">if(match('span',"[0-9][0-9]"), substr('span',0,2)+" "+substr('span',3), substr('span',0,1)+" "+substr('span',2))</eval>
        <eval token="spantrend">"-"+if(match('span',"[0-9][0-9]"), substr('span',0,3), substr('span',0,2))</eval>
      </change-->
    </input>
    <input type="text" token="src_ip">
      <label>Source IP</label>
      <default></default>
      <prefix>log.src_ip="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="dest_ip">
      <label>Destination IP</label>
      <default></default>
      <prefix>log.dest_ip="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="threat_name">
      <label>Threat</label>
      <default></default>
      <prefix>log.threat_name="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="log_subtype" searchWhenChanged="true">
      <label>Log Subtype</label>
      <default></default>
      <prefix>log.log_subtype="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="severity" searchWhenChanged="true">
      <label>Severity</label>
      <default></default>
      <prefix>log.severity="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="dropdown" token="app">
      <label>Application</label>
      <default></default>
      <prefix>log.app="</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| `_pan_dropdown(log.threat, log.app)`</populatingSearch>
    </input>
    <input type="dropdown" token="vsys">
      <label>Virtual System</label>
      <default></default>
      <prefix>log.vsys="</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| `_pan_dropdown(log.threat, log.vsys)`</populatingSearch>
    </input>
    <input type="dropdown" token="autofocus_tags" searchWhenChanged="true">
      <label>AutoFocus Tag</label>
      <default></default>
      <choice value="">ANY</choice>
      <prefix>search autofocus_tags="</prefix>
      <suffix>" |</suffix>
      <search base="basesearch">
        <query>| stats count by autofocus_tags</query>
      </search>
      <fieldForLabel>autofocus_tags</fieldForLabel>
      <fieldForValue>autofocus_tags</fieldForValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <search>
          <query>| tstats summariesonly=t count FROM datamodel="pan_firewall" WHERE nodename="log.correlation" GROUPBY _time span=1h | append [| makeresults] | head 25</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="colorBy">trend</option>
        <option name="drilldown">none</option>
        <option name="height">143</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="underLabel">Correlated Incidents Per Hour</option>
        <option name="useColors">1</option>
      </single>
      <single>
        <search>
          <query>| tstats summariesonly=t latest(_time) AS latest_time, count FROM datamodel="pan_firewall" WHERE nodename="log.threat" GROUPBY _time span=1h `session`
| timechart span=1h count
| append [| makeresults] | head 25</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="colorBy">trend</option>
        <option name="drilldown">none</option>
        <option name="height">143</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendInterval">$time.earliest$</option>
        <option name="underLabel">Network Incidents Per Hour</option>
        <option name="useColors">1</option>
      </single>
      <single>
        <search>
          <query>| tstats summariesonly=t count FROM datamodel="pan_endpoint" WHERE nodename="log.attacks" GROUPBY _time span=1h | append [| makeresults] | head 25</query>
        </search>
        <option name="colorBy">trend</option>
        <option name="drilldown">all</option>
        <option name="height">143</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="underLabel">Endpoint Incidents Per Hour</option>
        <option name="useColors">1</option>
        <drilldown>
          <link target="_self">/app/SplunkforPaloAltoNetworks/endpoint_security?form.time.earliest=$earliest$&amp;form.time.latest=$latest$</link>
        </drilldown>
      </single>
      <single>
        <search>
          <query>| tstats summariesonly=t count FROM datamodel="pan_aperture" WHERE nodename="log.incident" GROUPBY _time span=1h | append [| makeresults] | head 25</query>
        </search>
        <option name="colorBy">trend</option>
        <option name="drilldown">all</option>
        <option name="height">143</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="underLabel">Aperture SaaS Incidents Per Hour</option>
        <option name="useColors">1</option>
        <drilldown>
          <link target="_self">/app/SplunkforPaloAltoNetworks/saas_security?form.time.earliest=$earliest$&amp;form.time.latest=$latest$</link>
        </drilldown>
      </single>
      <single>
        <search>
          <query>| tstats summariesonly=t count FROM datamodel="pan_firewall" WHERE nodename="log.wildfire.malicious" GROUPBY _time span=1h | append [| makeresults] | head 25</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="colorBy">trend</option>
        <option name="drilldown">all</option>
        <option name="height">143</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="underLabel">Malicious WildFire Submissions Per Hour</option>
        <option name="useColors">1</option>
        <drilldown>
          <link target="_self">/app/SplunkforPaloAltoNetworks/wildfire_submissions?form.time.earliest=$earliest$&amp;form.time.latest=$latest$</link>
        </drilldown>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Threat Subtypes Over Time</title>
      <chart>
        <search base="basesearch">
          <query>| $autofocus_tags$ timechart count by log_subtype</query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">bottom</option>
        <drilldown>
          <set token="form.log_subtype">$click.name2$</set>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Threat Severity Over Time</title>
      <chart>
        <search base="basesearch">
          <query>| $autofocus_tags$ timechart count by severity</query>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.fieldColors">{"critical":#D93F3C,"high":#ED8440,"medium":#F7BC38,"low":#65A637,"informational":#6DB7C6}</option>
        <option name="charting.legend.labels">[critical,high,medium,low,informational]</option>
        <drilldown>
          <set token="form.severity">$click.name2$</set>
        </drilldown>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Incident Investigation Feed</title>
      <table>
        <search base="basesearch">
          <query>| $autofocus_tags$ eval time_in_seconds=_time | eval drilldown_token=if(sourcetype=="pan:endpoint","endpoint_event","network_event") | table _time log_subtype threat_name severity action app client_ip server_ip user file_name session_id serial_number drilldown_token victim_ip time_in_seconds autofocus_tags | sort -_time</query>
        </search>
        <option name="count">15</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <format type="color" field="severity">
          <colorPalette type="map">{"critical":#D93F3C,"high":#ED8440,"medium":#F7BC38,"low":#65A637,"informational":#6DB7C6}</colorPalette>
        </format>
        <format type="color" field="action">
          <colorPalette type="map">{"allowed":#F7BC38,"blocked":#A2CC3E,"deferred":#6A5C9E,"dropped":#65A637}</colorPalette>
        </format>
        <fields>["_time","log_subtype","threat_name","severity","action","app","client_ip","server_ip","autofocus_tags","user","file_name"]</fields>
        <drilldown>
          <link target="_blank">/app/SplunkforPaloAltoNetworks/incident_investigation?client_ip=$row.client_ip$&amp;server_ip=$row.server_ip$&amp;$row.drilldown_token$=t&amp;event_time=$row.time_in_seconds$&amp;session_id=$row.session_id$&amp;serial_number=$row.serial_number$&amp;victim_ip=$row.victim_ip$</link>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel depends="$debug$">
      <html>
        <p>time.earliest: $time.earliest$</p>
        <p>time.latest: $time.latest$</p>
        <p>timediff: $timediff$</p>
        <p>span: $span$</p>
        <p>spantext: $spantext$</p>
        <p>earliest_n: $earliest_n$</p>
        <p>latest_n: $latest_n$</p>
        <p>spantrend: $spantrend$</p>
        <p>action: $action$</p>
        <p>net-log_subtype: $net-log_subtype$</p>
        <p>net-file_hash: $net-file_hash$</p>
        <p>time.earliest: $time.earliest$</p>
      </html>
    </panel>
  </row>
</form>