<form>
  <label>System Dashboard</label>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="dropdown" token="log_subtype">
      <label>Log Subtype</label>
      <default/>
      <prefix>FILTER log_subtype is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs system count(system) AS count SPLITROW log_subtype AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="event_id">
      <label>Event ID</label>
      <default/>
      <prefix>FILTER event_id is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs system count(system) AS count SPLITROW event_id AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="serial_number">
      <label>Serial Number</label>
      <default/>
      <prefix>FILTER serial_number is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs system count(system) AS count SPLITROW serial_number AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="severity">
      <label>Severity</label>
      <default/>
      <prefix>FILTER severity is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs system count(system) AS count SPLITROW severity AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="text" token="description">
      <label>Description</label>
      <default/>
      <prefix>FILTER description is "</prefix>
      <suffix>"</suffix>
    </input>
  </fieldset>
  <row>
    <table>
      <title>Latest Events</title>
      <searchString>| pivot pan_logs system count(system) SPLITROW _time PERIOD second SPLITROW serial_number SPLITROW description SPLITROW log_subtype SPLITROW severity SPLITROW event_id $serial_number$ $description$ $log_subtype$ $severity$ $event_id$ | table _time serial_number log_subtype severity event_id description | sort -_time</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">connect</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="wrap">false</option>
      <option name="displayRowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="count">10</option>
      <drilldown>
        <link field="_time">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` _time="$row._time$"
        ]]>
        </link>
        <link field="serial_number">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` serial_number="$row.serial_number$"&earliest=$earliest$&latest=$latest$
          ]]>
        </link>
        <link field="description">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` description="$row.description$"&earliest=$earliest$&latest=$latest$
          ]]>
        </link>
        <link field="log_subtype">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` log_subtype="$row.log_subtype$"&earliest=$earliest$&latest=$latest$
          ]]>
        </link>
        <link field="severity">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` severity="$row.severity$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
        <link field="event_id">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` event_id="$row.event_id$"
	  ]]>
        </link>
      </drilldown>
      <option name="rowNumbers">false</option>
    </table>
  </row>
  <row>
    <chart>
      <title>System Events Over Time</title>
      <searchString>| pivot pan_logs system count(system) SPLITROW _time SPLITCOL log_subtype $serial_number$ $description$ $log_subtype$ $severity$ $event_id$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` log_subtype="$click.name2$" [| stats count | eval latest = $click.value$ %2b 300 | fields latest] earliest = $click.value$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Severity</title>
      <searchString>| pivot pan_logs system count(system) SPLITROW _time SPLITCOL severity $serial_number$ $description$ $log_subtype$ $severity$ $event_id$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` severity="$click.name2$" [| stats count | eval latest = $click.value$ %2b 300 | fields latest] earliest = $click.value$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
</form>