<form>
  <label>Threat Dashboard</label>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="src_ip">
      <label>Source IP</label>
      <default/>
      <prefix>FILTER src_ip is "</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="dst_ip">
      <label>Destination IP</label>
      <default/>
      <prefix>FILTER dst_ip is "</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="threat_id">
      <label>Threat ID</label>
      <default/>
      <prefix>FILTER threat_id is "</prefix>
      <suffix>"</suffix>
    </input>
    <input type="dropdown" token="log_subtype">
      <label>Log Subtype</label>
      <default/>
      <prefix>FILTER log_subtype is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs threat count(threat) AS count SPLITROW log_subtype AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="app">
      <label>Application</label>
      <default/>
      <prefix>FILTER app is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs threat count(threat) AS count SPLITROW app AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="vsys">
      <label>Virtual System</label>
      <default/>
      <prefix>FILTER vsys is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs threat count(threat) AS count SPLITROW vsys AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
  </fieldset>
  <row>
    <chart>
      <title>Threat Subtypes</title>
      <searchString>| pivot pan_logs threat count(threat) SPLITROW _time SPLITCOL log_subtype $src_ip$ $dst_ip$ $threat_id$ $log_subtype$ $app$ $vsys$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">connect</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/threat_overview?form.log_subtype=$click.name2$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Severity</title>
      <searchString>| pivot pan_logs threat count(threat) SPLITROW _time SPLITCOL severity $src_ip$ $dst_ip$ $threat_id$ $log_subtype$ $app$ $vsys$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_threat` severity="$click.name2$" earliest=$click.value$ [| stats count | eval latest = $click.value$ %2b 300 | fields latest]
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
