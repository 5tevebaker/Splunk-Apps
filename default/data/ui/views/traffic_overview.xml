  </row>
  <row>
    <chart>
      <title>Traffic Transmitted by Interface</title>
      <searchString>| tstats sum(traffic.bytes) AS sb from datamodel="pan_logs" where nodename="traffic" traffic.log_subtype=end traffic.src_ip="$src_ip$" traffic.dst_ip="$dst_ip$" traffic.dst_port="$dst_port$" traffic.src_user="$src_user$" traffic.protocol="$protocol$" traffic.app="$app$" traffic.action="$action$" groupby traffic.egress_interface | eval sumBytes = sb/(1024*1024) | stats values(sumBytes) AS MegaBytes by traffic.egress_interface</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
