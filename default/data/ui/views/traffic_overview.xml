    <chart>
      <title>Source User</title>
      <searchString>| tstats count from datamodel="pan_logs" where nodename="traffic" traffic.src_ip="$src_ip$" traffic.dst_ip="$dst_ip$" traffic.dst_port="$dst_port$" traffic.src_user="$src_user$" traffic.protocol="$protocol$" traffic.app="$app$" traffic.action="$action$" groupby traffic.src_user</searchString>
      <earliestTime>$earliest$</earliestTime>
