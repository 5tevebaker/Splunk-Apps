      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">none</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` $click.name$="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Traffic Received by Interface</title>
      <searchString>| tstats sum(traffic.bytes) As sb from datamodel="pan_logs" where nodename="traffic" traffic.log_subtype=end traffic.src_ip="$src_ip$" traffic.dst_ip="$dst_ip$" traffic.dst_port="$dst_port$" traffic.src_user="$src_user$" traffic.protocol="$protocol$" traffic.app="$app$" traffic.action="$action$" groupby traffic.ingress_interface | eval sumBytes = sb/(1024*1024) | stats values(sumBytes) AS MegaBytes by traffic.ingress_interface</searchString>
      <earliestTime>$earliest$</earliestTime>
