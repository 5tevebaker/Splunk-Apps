<form>
  <label>Traffic Dashboard</label>
  <description/>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="src_ip">
      <label>Source IP</label>
      <default/>
      <prefix>log.src_ip="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="dst_ip">
      <label>Destination IP</label>
      <default/>
      <prefix>log.dst_ip="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="dst_port">
      <label>Destination Port</label>
      <default/>
      <prefix>log.dst_port="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="user">
      <label>Source User</label>
      <default/>
      <prefix>log.user="</prefix>
      <suffix>"</suffix>
    </input>
    <input type="dropdown" token="app">
      <label>Application</label>
      <default/>
      <prefix>log.app="</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| `_pan_dropdown(log.traffic.end, log.app)`</populatingSearch>
    </input>
    <input type="dropdown" token="action">
      <label>Action</label>
      <default/>
      <prefix>log.action="</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| `_pan_dropdown(log.traffic.end, log.action)`</populatingSearch>
    </input>
  </fieldset>
  <row>
    <chart>
      <title>Bytes Transfered Over Time</title>
      <searchString>| `tstats` sum(log.bytes_sent) AS sumSent sum(log.bytes_received) AS sumReceived FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby _time span=5m | timechart span=5m values("sumReceived") AS "Bytes Received" values("sumSent") AS "Bytes Sent"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">connect</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` [| stats count | eval latest = $click.value$ %2b 300 | fields latest] earliest = $click.value$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Protocols Over Time</title>
      <searchString>| `tstats` count FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby _time log.protocol span=5m | timechart span=5m values(count) by log.protocol</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` protocol="$click.name2$" [| stats count | eval latest = $click.value$ %2b 300 | fields latest] earliest = $click.value$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
  <row>
    <chart>
      <title>Applications by Bytes Transfered</title>
      <searchString>| `tstats` sum(log.bytes_received) AS sbr sum(log.bytes_sent) AS sbs FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.app | eval sumBytes = sbr + sbs | stats values(sumBytes) AS Bytes by log.app | sort -Bytes | head 50</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` app="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Applications by Request</title>
      <searchString>| `tstats` count FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.app | stats values(count) AS Application by log.app | `top(50)`</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` app="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Source IP</title>
      <searchString>| `tstats` count FROM `node(log.traffic.end)` $src_ip$ $user$ $dst_ip$ $dst_port$ $app$ $action$ groupby log.src_ip | `top(50)`</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` src_ip="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
  <row>
    <chart>
      <title>Destination Port</title>
      <searchString>| `tstats` count FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.dst_port | `top(50)`</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` dst_port="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Destination IP</title>
      <searchString>| `tstats` count FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.dst_ip | `top(50)`</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` dst_ip="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Source User</title>
      <searchString>| `tstats` count FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.user | `top(50)`</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` user="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
  <row>
    <chart>
      <title>Traffic Transmitted by Interface</title>
      <searchString>| `tstats` sum(log.bytes) As sb FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.egress_interface | eval sumBytes = sb/(1024*1024) | stats values(sumBytes) AS MegaBytes by log.egress_interface | rename log.egress_interface AS "Egress Interface"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">none</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` egress_interface="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Traffic Received by Interface</title>
      <searchString>| `tstats` sum(log.bytes) As sb FROM `node(log.traffic.end)` $action$ $src_ip$ $dst_ip$ $dst_port$ $user$ $app$ groupby log.ingress_interface | eval sumBytes = sb/(1024*1024) | stats values(sumBytes) AS MegaBytes by log.ingress_interface | rename log.ingress_interface AS "Ingress Interface"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">none</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` ingress_interface="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
</form>
