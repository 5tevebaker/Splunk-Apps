<form>
  <label>Traffic Dashboard</label>
  <description/>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="src_ip">
      <label>Source IP</label>
      <default>*</default>
    </input>
    <input type="text" token="dst_ip">
      <label>Destination IP</label>
      <default>*</default>
    </input>
    <input type="text" token="dst_port">
      <label>Destination Port</label>
      <default>*</default>
    </input>
    <input type="text" token="src_user">
      <label>Source User</label>
      <default>*</default>
    </input>
    <input type="dropdown" token="protocol">
      <label>Protocol</label>
      <default>*</default>
      <choice value="*">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs traffic count(traffic) AS count SPLITROW protocol AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="app">
      <label>Application</label>
      <default>*</default>
      <choice value="*">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs traffic count(traffic) AS count SPLITROW app AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
    <input type="dropdown" token="action">
      <label>Action</label>
      <default>*</default>
      <choice value="*">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs traffic count(traffic) AS count SPLITROW action AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
  </fieldset>
  <row>
    <chart>
      <title>Bytes Transfered Over Time</title>
      <searchString>| tstats sum(traffic.bytes_sent) AS bs sum(traffic.bytes_received) AS br from datamodel="pan_logs" where nodename="traffic" traffic.log_subtype="end" traffic.src_ip="$src_ip$" traffic.dst_ip="$dst_ip$" traffic.dst_port="$dst_port$" traffic.src_user="$src_user$" traffic.protocol="$protocol$" traffic.app="$app$" traffic.action="$action$" groupby _time | timechart values(bs) AS "Bytes Sent" values(br) AS "Bytes Received"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">connect</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` [| stats count | eval latest = $click.value$ %2b 300 | fields latest] earliest = $click.value$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Protocols Over Time</title>
      <searchString>| tstats count from datamodel="pan_logs" where nodename="traffic" traffic.src_ip="$src_ip$" traffic.dst_ip="$dst_ip$" traffic.dst_port="$dst_port$" traffic.src_user="$src_user$" traffic.protocol="$protocol$" traffic.app="$app$" traffic.action="$action$" groupby _time traffic.protocol | timechart values(count) by traffic.protocol</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_traffic` protocol="$click.name2$" [| stats count | eval latest = $click.value$ %2b 300 | fields latest] earliest = $click.value$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
  <row>
