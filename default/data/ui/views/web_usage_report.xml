<form>
  <label>Web Activity Report</label>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="src_ip">
      <label>Source IP</label>
      <default></default>
      <prefix>FILTER src_ip is "</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="dst_hostname">
      <label>Destination Hostname</label>
      <default></default>
      <prefix>FILTER dst_hostname is "</prefix>
      <suffix>"</suffix>
    </input>
    <input type="text" token="src_user">
      <label>Source User</label>
      <default></default>
      <prefix>FILTER src_user is "</prefix>
      <suffix>"</suffix>
    </input>
    <input type="dropdown" token="vsys">
      <label>Virtual System</label>
      <default></default>
      <prefix>FILTER vsys is "</prefix>
      <suffix>"</suffix>
      <choice value="">ANY</choice>
      <populatingSearch fieldForValue="field" fieldForLabel="field_with_count">| pivot
        pan_logs url count(url) AS count SPLITROW vsys AS field
        | eval field_with_count = field . " (" . count . ")"</populatingSearch>
    </input>
  </fieldset>
  <row>
    <table>
      <title>Web Hits</title>
      <searchString>| pivot pan_logs url count(url) AS Count SPLITROW dst_hostname AS "Hostname" $src_ip$ $dst_hostname$ $src_user$ $vsys$ | sort -Count</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">false</option>
      <option name="displayRowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` dst_hostname="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </table>
    <chart>
      <title>Categories</title>
      <searchString>| pivot pan_logs url count(url) AS Count SPLITROW category $src_ip$ $dst_hostname$ $src_user$ $vsys$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` $click.name$="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
    <chart>
      <title>Applications</title>
      <searchString>| pivot pan_logs url count(url) AS Count SPLITROW app $src_ip$ $dst_hostname$ $src_user$ $vsys$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <drilldown>
        <link>
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_index` $click.name$="$click.value$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </chart>
  </row>
  <row>
    <table>
      <title>Web Activity Summary</title>
      <searchString>| pivot pan_logs url count(url) AS Count SPLITROW action AS "Action" SPLITROW category AS "Category" SPLITROW dst_hostname AS "Hostname" $src_ip$ $dst_hostname$ $src_user$ $vsys$ | sort -Count</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">false</option>
      <option name="displayRowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
      <drilldown>
        <link field="Action">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_web_activity` action="$row.Action$" category="$row.Category$" dst_hostname="$row.Hostname$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
        <link field="Category">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_web_activity` category="$row.Category$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
        <link field="Hostname">
          <![CDATA[
            /app/SplunkforPaloAltoNetworks/search?q=`pan_web_activity` dst_hostname="$row.Hostname$"&earliest=$earliest$&latest=$latest$
	  ]]>
        </link>
      </drilldown>
    </table>
  </row>
</form>
